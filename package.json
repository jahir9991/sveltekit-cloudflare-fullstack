{
	"name": "cloudflare-fullstack",
	"version": "0.0.1",
	"license": "Apache-2.0",
	"scripts": {
		"start": "vite dev",
		"server":"wrangler dev --remote",
		"build": "vite build",
		"build:w": "vite build --watch",
		"preview": "vite preview",
		"gen": "drizzle-kit generate:sqlite --out migrations --schema=src/schema.ts",
		"mig:dev": "wrangler d1 migrations apply cloudflare_fullstack_db --local",
		"mig:prod": "wrangler d1 migrations apply cloudflare_fullstack_db ",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.8",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-cloudflare": "^2.3.2",
		"@sveltejs/kit": "^1.22.6",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"better-sqlite3": "8.5.1",
		"cf-workers-proxy": "^0.6.1",
		"drizzle-kit": "^0.19.13",
		"drizzle-orm": "^0.28.2",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"prettier": "^3.0.2", 
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tslib": "^2.6.2",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.2",
		"wrangler": "^3.5.1"
	},
	"type": "module"
}
